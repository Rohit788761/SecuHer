<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context=".HomeScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_defence"
                android:layout_width="170dp"
                android:layout_height="140dp"
                app:cardCornerRadius="20dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DEFENCE"
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:textAlignment="center"
                    android:fontFamily="serif"
                    >
                </TextView>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/self_defense">
                </ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/attack"
                android:layout_width="170dp"
                android:layout_height="140dp"
                app:cardCornerRadius="20dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="ATTACK"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="18dp"></TextView>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/hand_attack">

                </ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/knife_attack"
                android:layout_width="170dp"
                android:layout_height="140dp"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="KNIFE SELF DEFENCE"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="18dp"></TextView>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="79dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/attacker"></ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/gun_defence"
                android:layout_width="170dp"
                android:layout_height="140dp"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="GUN DEFENCE"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="18dp"></TextView>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/man_gun">

                </ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/gun_attack"
                android:layout_width="170dp"
                android:layout_height="140dp"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="GUN ATTACK"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="18dp"></TextView>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/attack_gun"></ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/spray_defence"
                android:layout_width="170dp"
                android:layout_height="140dp"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="SPRAY FOR DEFENCE"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="18dp"></TextView>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/spray_attack">

                </ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/electric_shock"
                android:layout_width="170dp"
                android:layout_height="140dp"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="ELECTRIC SHOCK"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="18dp"></TextView>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/electric_shock"></ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>